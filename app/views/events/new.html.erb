<%= form_for @event do |f| %>
  <%= f.label           :name %>
  <%= f.text_field      :name %>
<br>
  <%= f.label           :location %>
  <%= f.text_field      :location %>
<br>
  <%= f.label           :description %>
  <%= f.text_area      :description %>

<br>
  <%= f.label           :datetime %>
  <%= f.datetime_select :datetime, ampm: true,
                        minute_step:15 %>
<br>
  <%= f.submit "Create event" %>

<% end %>